{
  "private": true,
  "name": "moon-examples",
  "infra": "monorepo",
  "scripts": {
    "moon": "moon --color --log trace",
    "build": "moon run :build",
    "test": "moon run :test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "versionup:patch": "npm version patch --workspaces && npm version patch",
    "versionup:minor": "npm version minor --workspaces && npm version minor",
    "versionup:major": "npm version major --workspaces && npm version major",
    "release": "npm run build && npm publish --workspaces"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@moonrepo/cli": "^0.7.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.4",
    "eslint": "^8.19.0",
    "eslint-config-beemo": "^2.1.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "packemon": "^2.3.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@8.11.0",
  "engines": {
    "node": "18.0.0"
  }
}
